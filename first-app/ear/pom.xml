<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.pohancenik</groupId>
		<artifactId>first-app</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>first-app-ear</artifactId>
	<packaging>ear</packaging>
	<name>First app - EAR packaging</name>
	<dependencies>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.pohancenik</groupId>
			<artifactId>first-app-module1-ejb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.pohancenik</groupId>
			<artifactId>first-app-module2-ejb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.pohancenik</groupId>
			<artifactId>first-app-module1-local</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.pohancenik</groupId>
			<artifactId>first-app-module1-remote</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.pohancenik</groupId>
			<artifactId>first-app-module2-local</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.pohancenik</groupId>
			<artifactId>first-app-module2-remote</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<applicationName>com.pohancenik.first-app</applicationName>
					<archive>
						<manifestEntries>
							<Dependencies>org.slf4j,deployment.second-app-ear-0.0.1-SNAPSHOT.ear</Dependencies>
						</manifestEntries>
					</archive>
					<modules>
						<jarModule>
							<groupId>com.pohancenik</groupId>
							<artifactId>first-app-module1-local</artifactId>
						</jarModule>
						<jarModule>
							<groupId>com.pohancenik</groupId>
							<artifactId>first-app-module1-remote</artifactId>
						</jarModule>
						<jarModule>
							<groupId>com.pohancenik</groupId>
							<artifactId>first-app-module2-local</artifactId>
						</jarModule>
						<jarModule>
							<groupId>com.pohancenik</groupId>
							<artifactId>first-app-module2-remote</artifactId>
						</jarModule>
						<ejbModule>
							<groupId>com.pohancenik</groupId>
							<artifactId>first-app-module1-ejb</artifactId>
							<moduleId>first-app-module1-ejb</moduleId>
							<uri>module1</uri>
						</ejbModule>
						<ejbModule>
							<groupId>com.pohancenik</groupId>
							<artifactId>first-app-module2-ejb</artifactId>
							<moduleId>first-app-module2-ejb</moduleId>
							<uri>module2</uri>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>